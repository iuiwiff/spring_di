<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
<!-- 의존성 주입할 클래스 설정 -->
<bean id="od" class="day0617.di.OracleDAO" scope="singleton"/>
<bean id="md" class="day0617.di.MySqlDAO" scope="singleton"/>

<!-- 의존성 주입받을 클래스 설정 -->
<bean id="service" class="day0617.di.ServiceImpl" scope="prototype">
	<constructor-arg ref="md"/>
</bean>

<bean id="service2" class="day0617.di.ServiceImpl" scope="prototype">
	<constructor-arg ref="od"/>
</bean>
</beans>
